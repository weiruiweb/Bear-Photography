@import "../../wxParse/wxParse.wxss";
page{
	width:100%;
	min-height:100%;
	background:#f5f5f5;
}
.recommend_left{
 	position:relative;	
}
.sort{
	width:140rpx;
	height:42rpx;
	border-radius:0 30rpx 30rpx 0;
	overflow:hidden;
	position:absolute;
	left:0;
	top:30rpx;
	line-height:42rpx;
	text-align:center;
}
.sort_cont{
	width:100%;
	height:100%;
}
.add_img{
	width:88rpx;
	height:88rpx;
	border-radius:50%;
	position:fixed;
	bottom:150rpx;
	right:0;
}
.add_img image{
	width:46rpx;
	height:46rpx;
	margin:0 auto;
}