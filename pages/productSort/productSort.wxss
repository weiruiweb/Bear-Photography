page{
    width:100%;
    min-height:100%;
    background:#f6f6f6;
}
.ip_tab_comtainer {
    width: 100%;
    white-space: nowrap;
    height:94rpx;
    background:#fff;
}

.ip_tab_comtainer_padd {
    display: inline-block;
    width: 24rpx;
}

.ip_tab_item_s {
    display: inline-block;
    line-height: 40rpx;
    padding: 12rpx 32rpx;
    color: #ED373D;
    margin-right: 8rpx;
    margin-left: 8rpx;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    background-color: #ffffff;
    border-radius: 4rpx;
    border: 1px solid #ED373D;
}

.ip_tab_item_n {
    display: inline-block;
    padding: 0 32rpx;
    line-height: 94rpx;
    color: #353535;
    margin-right: 8rpx;
    background-color: #ffffff;
    margin-left: 8rpx;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

